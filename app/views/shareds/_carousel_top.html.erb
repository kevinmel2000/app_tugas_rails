<section class="carousel shadow-bottom">
	<div class="carousel-top">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<% @slider.galleries.each_with_index do |f, index| %>
					<li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<%= 'active' if index == 1 %>">
					</li>
				<% end %>
			</ol>
			<div class="carousel-inner">
				<% @slider.galleries.each_with_index do |f, index| %>
				<div class="item <%= 'active' if index == 1 %>">
					<%= image_tag f.file.url %>
				</div>
				<% end %>
			</div>
			<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				<span class="fa fa-angle-left font100"></span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				<span class="fa fa-angle-right font100"></span>
			</a>
		</div>
		<div class="main-text hidden-xs">
			<div class="col-md-12">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<div class="position fix-right-search">
						<div class="panel panel-defaut panel-transparent">
							<div class="panel-body panel-text-grey">
								<div class="col-md-12">
									<h3>CARI BARANG DISINI!</h3>
								</div>
								<div class="br10"></div>
								<%= form_for :search, method: 'get', url: results_path do |f| %>
									<div class="search-input-top-index1">
										<div class="col-md-12">
											<label class="label-search-carousel">Lokasi</label>
											<%= text_field_tag :location, nil, class: "form-control", placeholder: "Masukan Lokasi Pencarian" %>
										</div>
									</div>
									<div class="br20"></div>
									<div class="search-input-top-index">
										<div class="col-md-6">
											<label class="label-search-carousel">Type Property</label>
											<%= select_tag :catalog_type, options_for_select(catalog_type, nil), prompt: 'Catalog type', class: 'form-control select-chosen' %>
										</div>
										<div class="col-md-6">
											<label class="label-search-carousel">Kondisi</label>
											<%= select_tag :condition, options_for_select(condition, nil), prompt: 'Condition', class: 'form-control select-chosen' %>
										</div>
									</div>
									<div class="br15"></div>
									<div class="search-input-top-index">
										<div class="col-md-6">
											<label class="label-search-carousel">Dari Harga</label>
											<%= select_tag :price, options_for_select(price), prompt: 'Price', class: 'form-control select-chosen' %>
										</div>
										<div class="col-md-6">
											<label class="label-search-carousel">Sampai Harga</label>
											<%= select_tag :price_to, options_for_select(price), prompt: 'Price to', class: 'form-control select-chosen' %>
										</div>
									</div>
									<div class="br10"></div>
									<div class="search-input-top-index">
										<div class="col-md-12">
											<label class="label-search-carousel">Kata Kunci</label>
											<%= text_field_tag :title, nil, class: "form-control", placeholder: "Masukan Barang yang dicari" %>
										</div>
									</div>
									<div class="br10"></div>
									<div class="col-md-12">
										<label class="label-search-carousel">&nbsp;</label>
										<button id="js-trigger-overlay" class="btn btn-info btn-green-effect no-border btn-block">Cari Property</button>
									</div>
									<div class="br15"></div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-3"></div>
			</div>
		</div>
	</div>
	<div id="push"></div>
</section>
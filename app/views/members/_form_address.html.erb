<div class="panel panel-primary">
	<div class="panel-heading">
		Address Detail
	</div>
	<div class="panel-body">
		<div class="form-group">
			<label>Negara</label>
			<%= address.text_field :country, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Provinsi</label>
			<%= address.text_field :province, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Kota</label>
			<%= address.text_field :city, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Alamat</label>
			<%= address.text_area :address, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Kode Pos</label>
			<%= address.text_field :postcode, class: 'form-control' %>
		</div>
	</div>
</div>
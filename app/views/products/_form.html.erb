<div id="page-content">
	<%= render 'shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to products_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
					List Products
				<% end %>
			</div>
			<h2><strong>Product</strong> New</h2>
		</div>
		<%= form_for @product, :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Status</label>
				<% @choice_status.each_with_index do |choice_status,index| %>
				<div class="col-md-2">
					<%= f.radio_button :status, choice_status, id: "choice_status_#{index}", required: true %>
					<b><%= choice_status %></b>
				</div>
				<% end %>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Category</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.number_field :category_id, class: 'form-control', placeholder: 'Title' %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Title</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
						<span class="input-group-addon"><i class="gi gi-list"></i></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Description</label>
				<div class="col-md-6">
					<%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
				</div>
			</div>			
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Price</label>
				<div class="col-md-6">
					<%= f.text_field :price, class: 'form-control', placeholder: 'Price' %>
				</div>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
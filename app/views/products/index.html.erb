<div id="page-content">
	<div class="block full">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to new_product_path do %>
					<div class="btn btn-success">Add Product</div>
				<% end %>
			</div>
			<h2><strong>Product</strong> lists</h2>
		</div>
		<div class="table-responsive">
			<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
				<thead>
					<tr>
						<th class="text-center">No</th>
						<th>Title</th>
						<th>Price</th>
						<th>Status</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each_with_index do |product,index| %>
					<tr>
						<td class="text-center"><%= index + 1 %></td>
						<td><%= product.title %></td>
						<td><%= product.price %></td>
						<td><%= product.status %></td>
						<td class="text-center">
							<div class="btn-group">
								<%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %> 
								<%= link_to 'Delete', product_path(product), method: 'delete', class: 'btn btn-danger', locals: {resource: product, confirmation: "#{product.title} will be deleted, are you sure ?"}%> 
							</div>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- ads top  -->
<section class="ads-top">
	<div class="container">
		<div class="br25"></div>
		<div class="row">
			<div class="row">
				<div class="col-md-9">
					<h3>IKLAN TERBARU</h3>
				</div>
				<div class="col-md-3">
					<div class="controls pull-right hidden-xs">
						<a class="left fa fa-caret-square-o-left btn btn-default btn-xs" href="#carousel2" data-slide="prev"></a>
						<a class="left fa fa-caret-square-o-right btn btn-default btn-xs" href="#carousel2" data-slide="next"></a>
					</div>
				</div>
			</div>
			<div id="carousel2" class="carousel slide hidden-xs" data-ride="carousel">
				<div class="carousel-inner">
					<div class="item active">
						<div class="row">
							<% @products.each do |p| %>
								<div class="col-sm-3">
									<div class="col-item">
										<div class="photo">
											<%= image_tag "#{p.galleries.first.file.url(:large)}", alt: 'Gambar', class: 'img-responsive' %>
										</div>
										<div class="info">
											<div class="row">
												<div class="price col-md-6">
													<h5><% p.title %></h5>
													<h5 class="price-text-color"><% p.price %></h5>
												</div>
												<div class="rating hidden-sm col-md-6">
													<i class="price-text-color fa fa-star"></i>
													<i class="price-text-color fa fa-star"></i>
													<i class="price-text-color fa fa-star"></i>
													<i class="price-text-color fa fa-star"></i>

												</div>
											</div>
											<div class="separator clear-left">
												<p class="btn-add">
													<a href="#" class="hidden-sm"><%= image_tag 'fair_deal.png', alt: 'Fair Deal Property' %></a>
												</p>
												<p class="btn-details">
													<i class="fa fa-list"></i><a href="#" class="hidden-sm">Details</a>
												</p>
											</div>
											<div class="clearfix">
											</div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


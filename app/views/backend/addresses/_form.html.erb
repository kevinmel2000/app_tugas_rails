<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to backend_addresses_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
					List addresses
				<% end %>
			</div>
			<h2><strong>address</strong> New</h2>
		</div>
		<%= form_for [:backend, @address], :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Provinsi</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :province, class: 'form-control', placeholder: 'Provinsi' %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Kota</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :city, class: 'form-control', placeholder: 'Kota' %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Alamat</label>
				<div class="col-md-8">
					<%= f.text_area :address, class: 'form-control txt-area' %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Kode Pos</label>
				<div class="col-md-8">
					<%= f.text_field :postcode, class: 'form-control', placeholder: 'e.x : 43121' %>
				</div>
			</div>			
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to backend_sponsors_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
				List Sponsor
				<% end %>
			</div>
			<h2><strong>Sponsor</strong> New</h2>
		</div>
		<%= form_for [:backend, @sponsor], :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Title</label>
				<div class="col-md-6">
					<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Link_Url</label>
				<div class="col-md-6">
					<%= f.text_field :link_url, class: 'form-control', placeholder: 'Link_Url' %>
				</div>
			</div>
				<label class="col-md-4 control-label" for="example-chosen">Image</label>
		<div class="col-md-6">
			<%= image_tag f.object.image.url(:medium) if f.object.image.present? %>
			<%= f.file_field :image, class: 'form-control' %>
		</div
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
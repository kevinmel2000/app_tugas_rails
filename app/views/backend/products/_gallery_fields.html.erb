<div class="well nested-fields">
<fieldset>
	<%= link_to_remove_association "<i class='fa fa-times'></i> Remove".html_safe, f, class: 'float-right btn btn-danger btn-xs' %>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Image</label>
		<div class="col-md-6">
			<%= image_tag f.object.file.url(:large) if f.object.file.present? %>
			<%= f.file_field :file, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Title</label>
		<div class="col-md-6">
			<div class="input-group">
				<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
				<span class="input-group-addon"><i class="gi gi-list"></i></span>
			</div>
		</div>
	</div>
</fieldset>
</div>

<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block full">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to new_backend_product_path(catalog_type: params[:catalog_type]) do %>
					<div class="btn btn-success">
						New Data
					</div>
				<% end %>
			</div>
			<h2><strong>Product</strong> lists</h2>
		</div>
		<div class="table-responsive">
			<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
				<thead>
					<tr>
						<th class="text-center">No</th>
						<th>Title</th>
						<th>Price</th>
						<th>Status</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each_with_index do |product,index| %>
					<tr>
						<td class="text-center"><%= index + 1 %></td>
						<td><a href="javascript:void(0)"><%= product.title %></a></td>
						<td>Rp. <%= product.price %></td>
						<td>
							<%= product.verified %>
						</td>
						<td class="text-center">
							<div class="btn-group">
								<%= link_to 'Edit', edit_backend_product_path(product), class: 'btn btn-default btn-sm' %> 
								<%= link_to 'Delete', backend_product_path(product), method: 'delete', class: 'btn btn-danger btn-sm' %> 
							</div>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div id="page-content">
    <%= render 'backend/shared/title_top' %>
    <div class="block">
        <div class="block-title">
            <div class="block-options pull-right">
                <%= link_to backend_cars_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
                List Car
                <% end %>
            </div>
            <h2><strong>Cars</strong> New</h2>
        </div>
        <%= form_for [:backend, @car], :html => {:class => "form-horizontal form-bordered"} do |f| %>
        <fieldset>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Transmission</label>
                <div class="col-md-6">
                        <%= f.text_field :transmission, class: 'form-control', placeholder: 'Transmission' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Kilometer</label>
                <div class="col-md-6">
                    <%= f.text_field :kilometer, class: 'form-control', placeholder: 'Kilometer' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Seat</label>
                <div class="col-md-6">
                    <%= f.text_field :seat, class: 'form-control', placeholder: 'Seat' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Door</label>
                <div class="col-md-6">
                    <%= f.text_field :color, class: 'form-control', placeholder: 'Color' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Production Year</label>
                <div class="col-md-6">
                    <%= f.text_field :production_year, class: 'form-control', placeholder: 'Production year' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Number Plate</label>
                <div class="col-md-6">
                    <%= f.text_field :number_plate, class: 'form-control', placeholder: 'Number Plate' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Engine</label>
                <div class="col-md-6">
                    <%= f.text_field :engine, class: 'form-control', placeholder: 'Engine' %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="example-chosen">Fuel</label>
                <div class="col-md-6">
                    <%= f.text_field :fuel, class: 'form-control', placeholder: 'Fuel' %>
                </div>
            </div>
        </fieldset>
        <div class="form-group form-actions">
            <div class="col-md-8 col-md-offset-4">
                <%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
            </div>
        </div>
        <% end %>
    </div>
</div>
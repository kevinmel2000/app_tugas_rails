<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to backend_profiles_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
					List profiles
				<% end %>
			</div>
			<h2><strong>Profile</strong> New</h2>
		</div>
		<%= form_for [:backend, @profile], :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Nama Lengkap</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :full_name, class: 'form-control', placeholder: 'Nama Lengkap' %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Avatar</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= image_tag f.object.avatar.url(:large) if f.object.avatar.present? %>
						<%= f.file_field :avatar, class: 'form-control' %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Jenis Kelamin</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :gender, class: 'form-control' %>
						<span class="input-group-addon"><i class="gi gi-list"></i></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Ulang Tahun</label>
				<div class="col-md-8">
					<%= f.text_field :brithday, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Phone</label>
				<div class="col-md-8">
					<%= f.text_field :phone, class: 'form-control' %>
				</div>
			</div>			
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
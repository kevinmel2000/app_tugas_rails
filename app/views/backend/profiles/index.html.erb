<div id="page-content">
	<div class="block full">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to new_backend_profile_path do %>
					<div class="btn btn-success">
						New Data
					</div>
				<% end %>
			</div>
			<h2><strong>Profile</strong> lists</h2>
		</div>
		<div class="table-responsive">
			<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
				<thead>
					<tr>
						<th class="text-center">No</th>
						<th>Full Name</th>
						<th>Gender</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @profiles.each_with_index do |profile,index| %>
					<tr>
						<td class="text-center"><%= index + 1 %></td>
						<td><a href="javascript:void(0)"><%= profile.full_name %></a></td>
						<td><%= profile.gender %></td>
						<td class="text-center">
							<div class="btn-group">
								<%= link_to 'Edit', edit_backend_profile_path(profile), class: 'btn btn-default btn-sm' %> 
								<%= link_to 'Delete', backend_profile_path(profile), method: 'delete', class: 'btn btn-danger btn-sm', locals: {resource: profile, confirmation: "#{profile.full_name} will be deleted, are you sure ?"}%> 
							</div>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
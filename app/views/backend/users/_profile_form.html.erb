<fieldset>
	<legend><i class="fa fa-angle-right"></i> Profile Information</legend>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Full name</label>
		<div class="col-md-6">
			<%= profile.text_field :full_name, class: 'form-control' , placeholder: 'ex : Your full name' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Avatar</label>
		<div class="col-md-6">
			<%#= image_tag @user.profile.avatar.url(:large) %>
			<%= profile.file_field :avatar, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Jenis Kelamin</label>
		<div class="col-md-6">
			<%= profile.select :gender, options_for_select(@sex,@user.profile.gender), {include_blank: 'Choose One'}, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Tanggal Lahir</label>
		<div class="col-md-6">
			<%= profile.text_field :brithday, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 control-label" for="example-chosen">Phone</label>
		<div class="col-md-6">
			<%= profile.text_field :phone, class: 'form-control', placeholder: 'ex : 085720247282' %>
		</div>
	</div>
</fieldset>
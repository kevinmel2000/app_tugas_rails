<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to backend_provinces_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
				List Province
				<% end %>
			</div>
			<h2><strong>Province</strong> New</h2>
		</div>
		<%= form_for [:backend, @province], :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Parent</label>
				<div class="col-md-6">
    			<%= f.collection_select :parent_id, Province.arrange_as_array({:order => 'name'}, @province.possible_parents) , :id, :name_for_selects, :include_blank => true %>
				</div>
			</div>
			<div class="form-group">
			<label class="col-md-4 control-label" for="example-chosen">Name</label>
				<div class="col-md-6">
					<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
				</div>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
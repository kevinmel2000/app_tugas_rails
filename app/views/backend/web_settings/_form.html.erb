<div id="page-content">
	<%= render 'backend/shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to backend_web_settings_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
				List Web Settings
				<% end %>
			</div>
			<h2><strong>Web</strong> Setting</h2>
		</div>
		<%= form_for [:backend, @web_setting], :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-heading">Web Setting</div>
					<div class="panel-body">
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Favicon</label>
							<div class="col-md-6">
								<%#= image_tag @web_settings.favicon.url(:medium), class: "pav-icon" %>
								<%= f.file_field :favicon, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Logo</label>
							<div class="col-md-6">
								<%#= image_tag @web_settings.logo.url(:medium) %>
								<%= f.file_field :logo, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Title</label>
							<div class="col-md-6">
								<%= f.text_field :title, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Description</label>
							<div class="col-md-6">
								<%= f.text_area :description, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Keywords</label>
							<div class="col-md-6">
								<%= f.text_area :keywords, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Header Tags</label>
							<div class="col-md-6">
								<%= f.text_area :header_tags, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Footer Tags</label>
							<div class="col-md-6">
								<%= f.text_area :footer_tags, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Phone</label>
							<div class="col-md-6">
								<%= f.text_field :phone, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Email</label>
							<div class="col-md-6">
								<%= f.text_field :email, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Facebook URL</label>
							<div class="col-md-6">
								<%= f.text_field :facebook_url, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Twitter URL</label>
							<div class="col-md-6">
								<%= f.text_field :twitter_url, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-4 control-label" for="example-chosen">Google+ URL</label>
							<div class="col-md-6">
								<%= f.text_field :gplus_url, class: 'form-control' %>
							</div>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">Gallery Slider</div>
					<div class="panel-body">
						<%= render partial: 'form_gallery', locals: {f: f} %>
					</div>
				</div>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-6 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<div id="page-content">
	<%= render 'shared/title_top' %>
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to galleries_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
					List Products
				<% end %>
			</div>
			<h2><strong>Gallery</strong> New</h2>
		</div>
		<%= form_for @gallery, :html => { :class => "form-horizontal form-bordered", :multipart => true } do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Title</label>
				<div class="col-md-6">
					<div class="input-group">
						<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
						<span class="input-group-addon"><i class="gi gi-list"></i></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Image</label>
				<div class="col-md-6">
					<%= f.file_field :file, class: 'form-control' %>
				</div>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>
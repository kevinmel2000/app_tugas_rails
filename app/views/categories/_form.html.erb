<div id="page-content">
	<div class="block">
		<div class="block-title">
			<div class="block-options pull-right">
				<%= link_to categories_path, class: "btn btn-alt btn-sm btn-default toggle-bordered" do %>
					List Categories
				<% end %>
			</div>
			<h2><strong>Category</strong> New</h2>
		</div>
		<%= form_for @category, :html => {:class => "form-horizontal form-bordered"} do |f| %>
		<fieldset>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Name</label>
				<div class="col-md-6">
					<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="example-chosen">Ancestry</label>
				<div class="col-md-6">
					<%= f.text_field :ancestry, class: 'form-control', placeholder: 'Ancestry' %>
				</div>
			</div>
		</fieldset>
		<div class="form-group form-actions">
			<div class="col-md-8 col-md-offset-4">
				<%= submit_tag :save, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% end %>
	</div>
</div>